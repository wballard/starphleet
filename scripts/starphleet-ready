#! /usr/bin/env bash

if [ -n "${1}" ]; then
  TEST_COMMAND="curl -X GET -o /dev/null -s -w %{response_code} ${1}"

  for c in {1..100}; do
    RESULT=`${TEST_COMMAND}`
    if [ -n "${DEBUG}" ]; then
      echo ${RESULT}
    fi
    if [ ${RESULT} == "200" ]; then
      exit 0;
    fi
    sleep .2;
  done

  if [ -n "${DEBUG}" ]; then
    echo ${RESULT}
  fi
  echo "failed to get 200 back from ${1}"
  exit 1;
else
  echo no healthcheck present
fi
